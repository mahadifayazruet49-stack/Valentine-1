<script>
function moveButton() {
    const btn = document.getElementById('noBtn');
    btn.style.left = Math.random() * (window.innerWidth - btn.offsetWidth) + "px";
    btn.style.top = Math.random() * (window.innerHeight - btn.offsetHeight) + "px";
}

function showLove() {
    document.getElementById('askSection').classList.add('hidden');
    document.getElementById('successMessage').classList.remove('hidden');
    document.body.style.backgroundColor = "#ffb3c1";

    if (navigator.vibrate) navigator.vibrate([200,100,200]);
    document.getElementById('bgMusic').play().catch(()=>{});
    setInterval(createHeart, 300);

    window.open("https://wa.me/8801XXXXXXXXX?text=I%20said%20YES%20‚ù§Ô∏è", "_blank");
    setTimeout(()=>window.open("https://instagram.com/yourprofile","_blank"),1200);
    setTimeout(()=>window.open("https://drive.google.com/your-letter-link","_blank"),2200);
}

function openSecret() {
    window.location.href = "https://your-secret-page.com";
}

function createHeart() {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerText = "‚ù§Ô∏è";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = (16 + Math.random()*20) + "px";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),6000);
}
</script>

